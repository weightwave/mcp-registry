{
  "description": "Sequential thinking server for step-by-step reasoning",
  "command": "npx",
  "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
  "type": "stdio",
  "parameters": {
    "model": {
      "type": "string",
      "required": false,
      "default": "gpt-4",
      "description": "Language model to use for reasoning",
      "argTemplate": "--model={value}"
    },
    "temperature": {
      "type": "number",
      "required": false,
      "default": 0.7,
      "description": "Sampling temperature for model outputs (0.0 to 1.0)",
      "argTemplate": "--temperature={value}"
    },
    "max_steps": {
      "type": "integer",
      "required": false,
      "default": 5,
      "description": "Maximum number of reasoning steps",
      "argTemplate": "--max-steps={value}"
    },
    "step_timeout": {
      "type": "integer",
      "required": false,
      "default": 30000,
      "description": "Timeout per reasoning step in milliseconds",
      "argTemplate": "--step-timeout={value}"
    },
    "verbose": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Enable verbose logging of reasoning steps",
      "argTemplate": "--verbose={value}"
    }
  }
}
